<p id="notice"><%= notice %></p>

<div class="row">
  <% @videos.each do |video| %>
  <div class="col-xs-6">
    <div class="thumbnail">
      <img src="holder.js/200x200" alt="...">
      <div class="caption">
        <p>お気に入り数：♡<%= video.video_likes.count%></p>

        <%= link_to video_path(video) do %>
          <strong><h3><%= video.title %></h3></strong>
        <% end %>

        <ul>
          <% video.video_tags.each do |tag| %>
            <li><%= tag.tag.tag %></li>
          <% end %>
        </ul>

        <div><%= button_to '1dayブックマークする', add_oneday_bookmark_path(video.id), method: :post %></div>
          <% video.video_comments.each do |comment| %>
            <div class="comment">
              <%= comment.user.username %>
              <%= comment.comment %>
            </div>
          <% end %>
        </div>
    </div>
  </div>
  <% end %>
</div>
<%= link_to 'New Video', new_video_path %>
