<p id="notice"><%= notice %></p>

<h1>Curation Tags</h1>

<table>
  <thead>
    <tr>
      <th>Tag</th>
      <th>Curation</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @curation_tags.each do |curation_tag| %>
      <tr>
        <td><%= curation_tag.tag %></td>
        <td><%= curation_tag.curation %></td>
        <td><%= link_to 'Show', curation_tag %></td>
        <td><%= link_to 'Edit', edit_curation_tag_path(curation_tag) %></td>
        <td><%= link_to 'Destroy', curation_tag, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

